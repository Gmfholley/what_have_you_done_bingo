<div class="row">
  <h2 class="accent-font text-center"><%= @organization.name %></h2>
    <% if @is_admin %>
      <div class="col col-xs-12 col-md-6 text-center">
        <%= link_to 'Edit Organization', edit_organization_path(@organization), class: 'accent-background btn' %>    
      </div>
      <div class="col col-xs-12 col-md-6 text-center">
        <%= link_to 'Delete Organization', organization_path(@organization), method: 'delete', class: 'accent-background btn' %>
      </div>
    <div class="margin30"></div>
    <h3 class="text-center">Link to share for new member sign-ups:</h3>
    <h5 class="text-center"><%= organization_sign_up_url(@organization.token) %></h5>
    <%= link_to "Update your company's token.", update_organization_token_path(@organization), class: 'accent-background btn' %>
  <% end %>
  <div class="col col-xs-12 col-md-8 col-md-offset-2">
    <h3>Your Bingo Card Templates</h3>
    <%= link_to "Create a new bingo card template", new_organization_template_path(@organization), class: 'accent-background btn' %>
    <table>
      <thead>
        <tr>
          <th>Name</th>
          <th>Rating</th>
          <th>Url for sharing of public templates</th>
          <th>Is public</th>
          <th>Number of users</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @organization.templates.each do |template| %>
          <tr>
            <td><%= template.name %></td>
            <td><%= template.rating %></td>            
            <td><%= link_to share_template(template.token), share_card(template.token) %></td>
            <td><%= template.is_public %></td>
            <td><%= template.cards.count %></td>
            <td><%= link_to 'Show', organization_template_path(@organization, template) %></td>
            <td><%= link_to 'Edit', edit_organization_template_path(@organization, template) %></td>
            <td><%= link_to 'Destroy', organization_template_path(@organization, template), method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  
  <div class="col col-xs-12 col-md-8 col-md-offset-2">
    <table class="table table-condensed table-responsive table-hover">
      <thead class="accent-background">
        <th>Name</th>
        <th>Status</th>
      </thead>
      <tbody>
        <% @organization.users.each do |user| %>
          <tr>
            <% if user == @user %>
                <td><%= link_to "#{user.first_name} #{user.last_name}", profile_path %></td>
                <td><%= user.role(@organization).name %> 
                  <%= link_to "Drop organization", organization_sign_up_path(@organization.token), method: "delete", class: "btn" %></td>
              
            <% elsif @is_admin %>  
                <td><%= link_to "#{user.first_name} #{user.last_name}", user_path(user.id) %></td>
                <td><%= user.role(@organization).name %> 
                  <%= link_to "Remove user", organization_user_path(@organization.id, user.id), method: "delete", class: "btn" %>
                  <% if user.role(@organization) == Role.admin %>
                    <%= link_to "Remove admin", organization_user_path(@organization.id, user.id, organization_user: {role_id: @user_id}), method: "put", class: "btn" %>
                  <% else %>
                    <%= link_to "Make an admin", organization_user_path(@organization.id, user.id, organization_user: {role_id: @admin_id}), method: "put", class: "btn" %>              
                  <% end %>
                </td>
            <% else %>
                <td><%= "#{user.first_name} #{user.last_name}" %></td>
                <td></td>
            <% end %>
          </tr>
        <% end %>
        <tr></tr>
      </tbody>
    </table>
  </div>
  <div class="clear:both"></div>
</div>