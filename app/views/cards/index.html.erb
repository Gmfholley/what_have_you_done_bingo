<p id="notice"><%= notice %></p>

<h1>Listing Cards</h1>

<table>
  <thead>
    <tr>
      <th>Template</th>
      <th>User</th>
      <th>Token</th>
      <th>Is public</th>
      <th>Num bingos</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @cards.each do |card| %>
      <tr>
        <td><%= card.template_id %></td>
        <td><%= card.user_id %></td>
        <td><%= card.token %></td>
        <td><%= card.is_public %></td>
        <td><%= card.num_bingos %></td>
        <td><%= link_to 'Show', card %></td>
        <td><%= link_to 'Edit', edit_card_path(card) %></td>
        <td><%= link_to 'Destroy', card, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

