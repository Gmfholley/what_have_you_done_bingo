<div class="row">
  <h2 class="accent-font text-center">Hi, <%= @user.first_name %></h2>
  <% @user.organizations.each do |org| %>
    <h4 class="text-center">Member of <%= link_to org.name, organization_path(org)%>  <%= link_to "Drop organization", organization_sign_up_path(org.token), method: "delete", class: "btn" %>
</h4>
 <% end %>
  <div class="row">
    <div class="col col-xs-12 col-md-6 text-center">
      <%= link_to 'Edit Profile', edit_profile_path, class: 'btn accent-background' %>    
    </div>
    <div class="col col-xs-12 col-md-6 text-center">
      <%= link_to 'Delete Account', profile_path, method: 'delete', class: 'btn accent-background' %>
    </div>
  </div>  
  
  <table>
    <thead>
      <tr>
        <th>Template</th>
        <th>Url for sharing of public bingos</th>
        <th>Is public</th>
        <th>Num bingos</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @user.cards.each do |card| %>
        <tr>
          <td><%= link_to card.template.name, organization_template_path(card.template.organization, card.template) %></td>
          <td><%= link_to share_card(card.token), share_card(card.token) %></td>
          <td><%= card.is_public %></td>
          <td><%= card.num_bingos %></td>
          <td><%= link_to 'Show', card %></td>
          <td><%= link_to 'Edit', edit_card_path(card) %></td>
          <td><%= link_to 'Destroy', card, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  
</div>