<div class="row">
  <%= form_tag login_path, :method => :post do %>
    <div class="form col col-xs-12">
      <div class="form-group">
        <%= label_tag :email %><br />
        <%= text_field_tag :email, nil, class: "form-control", placeholder: "email@address.com" %>
      </div>
      <div class="form-group">
        <%= label_tag :password %><br />
        <%= password_field_tag :password, nil, class: "form-control", placeholder: "password" %>
      </div>
      <div class="actions form-group">
        <%= submit_tag "Login", class: "btn accent-background" %>
      </div>
    </div>
  <% end %>
</div>