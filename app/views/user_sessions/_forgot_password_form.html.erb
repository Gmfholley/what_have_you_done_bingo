<div class="row">
  <div class="form col col-xs-12">
    <%= form_tag password_resets_path, :method => :post do %>
      <div class="form-group">
        <%= label_tag :email %><br />
        <%= text_field_tag :email, nil, placeholder: "email@address.com", class: "form-control" %>
      </div>
      <div class="form-group">
        <%= submit_tag "Reset my password!", class: "btn accent-background" %>
      </div>
    <% end %>
  </div>
</div>